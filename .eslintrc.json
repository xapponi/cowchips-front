{
  "extends": [
    "plugin:vue/essential"
  ],

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "parser": "babel-eslint"
  },

  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },

  "rules": {
    "semi": [2, "never"],
    "no-var": 2
  },

  "plugins": [
    "import",
    "node",
    "promise",
    "standard",
    "vue"
  ],

  "globals": {
    "document": false,
    "navigator": false,
    "window": false
  }
}
